{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts",
    "src/**/**.jsx",
    "src/**/**.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}